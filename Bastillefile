CONFIG set sysvshm=new
RESTART
ARG psql-version=12
ARG odoo-version=15.0
PKG git-lite python38 py38-pip py38-postgresql py38-lxml py38-ldap postgresql${psql-version}-server wkhtmltopdf rust
SYSRC postgresql_enable=YES
SYSRC odoo_enable=YES
OVERLAY root
OVERLAY usr
CMD chmod +x /usr/local/etc/rc.d/odoo
RENDER root/bootstrap_odoo.sh
CMD /root/bootstrap_odoo.sh

